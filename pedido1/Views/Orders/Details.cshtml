@model pedido1.Models.Order

@{
    ViewData["Title"] = "Details";
}

<h2>Detalles del Pedido</h2>
<p>Cliente: @Model.Cliente.Nombre</p>
<p>Fecha: @Model.Fecha</p>
<p>Estado: @Model.Estado</p>
<p>Total: @Model.Total</p>

<table>
    <thead>
        <tr>
            <th>Producto</th>
            <th>Cantidad</th>
            <th>Subtotal</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.DetallePedidos)
        {
            <tr>
                <td>@item.Producto.Nombre</td>
                <td>@item.Cantidad</td>
                <td>@item.Subtotal</td>
            </tr>
        }
    </tbody>
</table>
