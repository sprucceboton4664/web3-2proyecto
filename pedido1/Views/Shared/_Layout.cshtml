<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - pedido1</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        body {
            background: linear-gradient(120deg, #f6d365 0%, #fda085 100%);
            min-height: 100vh;
        }
        .navbar {
            background: linear-gradient(90deg, #43aa8b 0%, #577590 100%);
            box-shadow: 0 4px 16px rgba(67, 170, 139, 0.15);
        }
        .navbar-brand, .nav-link, .navbar-text {
            color: #fff !important;
            font-weight: 500;
            letter-spacing: 1px;
        }
        .container {
            background: rgba(255,255,255,0.85);
            border-radius: 16px;
            box-shadow: 0 4px 24px rgba(67, 170, 139, 0.10);
            padding: 2rem;
            margin-top: 2rem;
        }
        footer {
            background: linear-gradient(90deg, #577590 0%, #43aa8b 100%);
            color: #fff;
            padding: 1rem 0;
            text-align: center;
            margin-top: 2rem;
            border-radius: 0 0 16px 16px;
            box-shadow: 0 -2px 12px rgba(67, 170, 139, 0.10);
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg">
            <div class="container-fluid">
                <a class="navbar-brand" href="/">Pedido1</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="/Products">Productos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Orders">Pedidos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Users">Usuarios</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        @RenderBody()
    </div>
    <footer>
        <span>&copy; @DateTime.Now.Year - pedido1 | Proyecto Razor Pages</span>
    </footer>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>

// En la terminal de Visual Studio, ejecute estos comandos:
dotnet ef migrations add AddDescripcionToProduct
