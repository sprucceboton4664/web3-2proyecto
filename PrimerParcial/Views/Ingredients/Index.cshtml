@model IEnumerable<PrimerParcial.Models.Ingredient>

@{
    ViewData["Title"] = "Ingredientes";
}

<h1>Ingredientes</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Agregar Nuevo Ingrediente</a>
</p>

<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <th>@Html.DisplayNameFor(model => model.Quantity)</th>
                <th>Receta</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Quantity)</td>
                    <td>
                        <a asp-controller="Recipes" asp-action="Details" asp-route-id="@item.RecipeId">
                            @Html.DisplayFor(modelItem => item.Recipe.Name)
                        </a>
                    </td>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Editar</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">Detalles</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Eliminar</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>