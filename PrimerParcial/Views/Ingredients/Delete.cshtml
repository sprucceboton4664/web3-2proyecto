@model PrimerParcial.Models.Ingredient

@{
    ViewData["Title"] = "Eliminar Ingrediente";
}

<h1>Eliminar Ingrediente</h1>

<h3>¿Estás seguro de que quieres eliminar este ingrediente?</h3>
<div class="alert alert-warning">
    <strong>Advertencia:</strong> Esta acción no se puede deshacer.
</div>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">Nombre:</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Name)</dd>

            <dt class="col-sm-2">Cantidad:</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Quantity)</dd>

            <dt class="col-sm-2">Receta:</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Recipe.Name)</dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" class="mt-3">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Eliminar" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>