@model PrimerParcial.Models.Recipe

@{
    ViewData["Title"] = "Detalles de Receta";
}

<h1>@Html.DisplayFor(model => model.Name)</h1>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5>Información de la Receta</h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">Categoría:</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Category.Name)</dd>

                    <dt class="col-sm-3">Descripción:</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Description)</dd>

                    <dt class="col-sm-3">Tiempo de Preparación:</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.PreparationTime) minutos</dd>

                    <dt class="col-sm-3">Nivel de Dificultad:</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.DifficultyLevel)/10</dd>

                    <dt class="col-sm-3">Fecha de Creación:</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.CreatedDate)</dd>
                </dl>
            </div>
        </div>

        @if (!string.IsNullOrEmpty(Model.Instructions))
        {
            <div class="card mt-3">
                <div class="card-header">
                    <h5>Instrucciones</h5>
                </div>
                <div class="card-body">
                    <p>@Html.DisplayFor(model => model.Instructions)</p>
                </div>
            </div>
        }
    </div>

    <div class="col-md-4">
        @if (Model.Ingredients != null && Model.Ingredients.Any())
        {
            <div class="card">
                <div class="card-header">
                    <h5>Ingredientes</h5>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled">
                        @foreach (var ingredient in Model.Ingredients)
                        {
                            <li class="mb-2">
                                <strong>@ingredient.Name</strong><br>
                                <small class="text-muted">@ingredient.Quantity</small>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        }
        else
        {
            <div class="alert alert-info">
                <p>No hay ingredientes registrados para esta receta.</p>
                <a asp-controller="Ingredients" asp-action="Create" class="btn btn-sm btn-primary">Agregar Ingredientes</a>
            </div>
        }
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Volver a Lista</a>
</div>