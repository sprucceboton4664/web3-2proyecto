@model PrimerParcial.Models.Recipe

@{
    ViewData["Title"] = "Eliminar Receta";
}

<h1>Eliminar Receta</h1>

<h3>¿Estás seguro de que quieres eliminar esta receta?</h3>
<div class="alert alert-warning">
    <strong>Advertencia:</strong> Esta acción también eliminará todos los ingredientes asociados y no se puede deshacer.
</div>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">Nombre:</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Name)</dd>

            <dt class="col-sm-2">Categoría:</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Category.Name)</dd>

            <dt class="col-sm-2">Descripción:</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Description)</dd>

            <dt class="col-sm-2">Tiempo:</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.PreparationTime) minutos</dd>

            <dt class="col-sm-2">Dificultad:</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.DifficultyLevel)/10</dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" class="mt-3">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Eliminar" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>